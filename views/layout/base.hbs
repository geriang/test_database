<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>Database</title>
</head>

<body>
  <div class="container">
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a href="/" class="nav-link">Home</a>
          </li>
          <li class="nav-item">
            <a href="/admin/products" class="nav-link">Edit Products</a>
          </li>
          <li class="nav-item">
            <a href="/product" class="nav-link">Display Products</a>
          </li>
          {{!-- <li class="nav-item">
            <a href="/admin/user/register" class="nav-link">User Register</a>
          </li> --}}
        </ul>
      </div>
    </nav>

    <!-- Flash messages -->
    {{#if success}}
    {{#each success}}
    <div class="alert alert-success">
      {{this}}
    </div>
    {{/each}}
    {{/if}}

    {{#if error}}
    {{#each error}}
    <div class="alert alert-danger">
      {{this}}
    </div>
    {{/each}}
    {{/if}}

    <!-- Content -->
    {{#block "content"}}{{/block}}
  </div>

</body>

</html>